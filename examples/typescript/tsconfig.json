{
    "compilerOptions": {
        "module": "none",
        "target": "es2015",
        "lib": ["dom", "es2015", "es2016", "es2017"],
        "moduleResolution": "node",
        "sourceMap": true,
        "declaration": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitUseStrict": true,
        "noUnusedLocals": true
    },
    "exclude": ["node", "node_modules"]
}